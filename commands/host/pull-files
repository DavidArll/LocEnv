#!/usr/bin/env bash

## Description: Pull files from Acquia for given environment and site.
## Usage: pull-files <environment> <site> [--yes]
## CanRunGlobally: false

ENV=$1
SITE=$2
FLAG=$3

if [[ -z "$ENV" || -z "$SITE" ]]; then
  echo "âŒ Usage: ddev pull-files <environment> <site> [--yes]"
  exit 1
fi

echo "ğŸ”‘ Authenticating with Acquia..."
# LÃ³gica opcional

echo "ğŸ“‚ Syncing files for '$SITE' from '$ENV'..."

# Comando simulado
ddev drush rsync "@$SITE.$ENV:%files/" "@loc.$SITE:%files/" -y

if [[ "$FLAG" == "--yes" ]]; then
  echo "âœ… Files synced without interaction."
else
  read -p "âœ… Files synced. Press Enter to continue..."
fi
