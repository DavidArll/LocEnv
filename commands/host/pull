#!/usr/bin/env bash

## Description: Pull from Acquia (db or files)
## Usage: ddev pull <db|files> <environment> <site> [--yes]
## CanRunGlobally: false

ACTION=$1
ENVIRONMENT=$2
SITE=$3
FLAG=$4

if [[ -z "$ACTION" || -z "$ENVIRONMENT" || -z "$SITE" ]]; then
  echo "‚ùå Usage: ddev pull <db|files> <environment> <site> [--yes]"
  exit 1
fi

case "$ACTION" in
  db)
    echo "üîÑ Pulling DB for site '$SITE' from environment '$ENVIRONMENT'..."
    ddev pull-db "$ENVIRONMENT" "$SITE" "$FLAG"
    ;;
  files)
    echo "üîÑ Pulling files for site '$SITE' from environment '$ENVIRONMENT'..."
    ddev pull-files "$ENVIRONMENT" "$SITE" "$FLAG"
    ;;
  *)
    echo "‚ùå Unknown action '$ACTION'. Use 'db' or 'files'."
    exit 1
    ;;
esac
